#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting
echo "ğŸ“ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint found issues. Please fix them before committing."
  exit 1
fi

# Run type checking
echo "ğŸ”§ Running TypeScript type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript found type errors. Please fix them before committing."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run test -- --passWithNoTests
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix them before committing."
  exit 1
fi

# Run security audit
echo "ğŸ”’ Running security audit..."
npm audit --audit-level=moderate
if [ $? -ne 0 ]; then
  echo "âš ï¸  Security vulnerabilities found. Please review and fix them."
  echo "ğŸ’¡ Run 'npm audit fix' to automatically fix some issues."
  exit 1
fi

