#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint found issues. Please fix them before committing."
  exit 1
fi

# Run type checking
echo "🔧 Running TypeScript type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ TypeScript found type errors. Please fix them before committing."
  exit 1
fi

# Run tests
echo "🧪 Running tests..."
npm run test -- --passWithNoTests
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Please fix them before committing."
  exit 1
fi

# Run security audit
echo "🔒 Running security audit..."
npm audit --audit-level=moderate
if [ $? -ne 0 ]; then
  echo "⚠️  Security vulnerabilities found. Please review and fix them."
  echo "💡 Run 'npm audit fix' to automatically fix some issues."
  exit 1
fi

echo "✅ All pre-commit checks passed!"
